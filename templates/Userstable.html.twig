{% block title %}Users table{% endblock %}
{% extends 'Layout.html.twig' %}
{% block pagetitle %}Users Table{% endblock %}
{% block content %}
<div class="main-body">
    <div class="table-responsive-lg">
        <table class="table align-middle table-striped w-auto">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nickname</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Creation Date</th>
                    <th>Update Date</th>
                    <th>Active</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                {% for user in users %}
                <tr class="table-info">
                    <td>{{ user.id }}</td>
                    <td>{{ user.nickname }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roleName }}</td>
                    <td>{{ user.creationDate }}</td>
                    <td>{{ user.updateDate }}</td>
                    <td>{{ user.isActive }}</td>
                    <td>
                        <input type="hidden" name="token" value="{{ get_token('registration') }}">
                        <a class="btn" style="background-color:#396DAC; color:#fff" target="__blank"
                            href="/admin/edituser/{{user.id}}">Edit</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}